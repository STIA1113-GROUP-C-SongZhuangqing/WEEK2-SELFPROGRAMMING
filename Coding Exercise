package SelfProgramming;

public class Addtition {
	public static void main(String[] args) {
		System.out.println ("24 and 45 concatenated: " + 24 + 45);

	    System.out.println ("24 and 45 added: " + (24 + 45));

	}
}

package SelfProgramming;

public class Facts {
		public static void main(String[] args) {
			System.out.println ("We present the following facts for your "
                    + "extracurricular edification:");
			System.out.println ();

			System.out.println ("Letters in the Hawaiian alphabet: 12");
		      
			System.out.println ("Dialing code for Antarctica: " + 672);

		    System.out.println ("Year in which Leonardo da Vinci invented "
		                          + "the parachute: " + 1515);

		    System.out.println ("Speed of ketchup: " + 40 + " km per year");

		}

}


package SelfProgramming;

public class FormatingOutput {
	public static void main(String[] args) {
		double price=1.21997;
		System.out.printf("%.2f",price);
		System.out.printf("%10.2f", price);
	}
}


package SelfProgramming;

public class FormatSpecifier {
	public static void main(String[] args) {
		int x=10;double y=5.373123;
		System.out.printf("Value of x is %d and value of y is %6.2f%n",x,y);
	}
}

package SelfProgramming;

public class Rose {
	public static void main(String[] args) {
		System.out.println ("Roses are red,\n\tViolets are blue,\n" +
		         "Sugar is sweet,\n\tBut I have \"commitment issues\",\n\t" +
		         "So I'd rather just be friends\n\tAt this point in our " +
		         "relationship.");

	}
}


package SelfProgramming;

public class Thank {
	public static void main(String[] args) {
		System.out.println ("\"Thank you all for coming to my home\r\n"
				+ "tonight,\" he said mysteriously");
}
}

package SelfProgramming;

public class XYZ {
	public static void main(String[] args) {
		System.out.println ("X: " + 25);
		System.out.println ("Y: " + (15 + 50));
		System.out.println ("Z: " + 300 + 50);

	}
}
